{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",

    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    "forceConsistentCasingInFileNames": true,

    "verbatimModuleSyntax": true,
    "preserveConstEnums": true,
    "isolatedModules": true,

    "baseUrl": "./packages/ui/",
    "sourceMap": false,
    "strict": true,

    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    
    "composite": true,
    "declaration": true,
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./src/components/**/test/*",
    "./src/components/**/labs/*",
    "./src/**/*.vue",
    "./src/**/*.test.vue",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/**/fixure/*"
  ]
}
